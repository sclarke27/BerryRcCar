<script type="text/recon">
@div {
	@form {
		host: '{{fullSwimUrl}}'
		node: 'botState'
		botName:  @link(lane: 'name', type: value)
		[Bot Name:]
		@input(type: text, name: device, value: $botName#0)
		@br
		currentIntent: @link(lane: 'currentIntent', type: value)
		[Current Intent:] 
		@input(type: text, name: device, value: $currentIntent#0)
		@br
		canDriveForward:  @link(lane: 'canDriveForward', type: value)
		[Can Drive Forwards:] 
		@input(type: text, name: device, value: $canDriveForward#0)
		@br
		[Can Drive Backwards:] 
		canDriveBackward:  @link(lane: 'canDriveBackward', type: value)
		@input(type: text, name: device, value: $canDriveBackward#0)
		@br
		[Is Driving Forwards:] 
		isDrivingForward:  @link(lane: 'isDrivingForward', type: value)
		@input(type: text, name: device, value: $isDrivingForward#0)
		@br
		[Is Driving Backwards:]
		isDrivingBackward:  @link(lane: 'isDrivingBackward', type: value)
		@input(type: text, name: device, value: $isDrivingBackward#0)
		@br
	}
}
</script>
<input type="button" value="Drive" onclick="drive()" />
<input type="button" value="Idle" onclick="idle()" />
<script type="text/javascript">
	const fullSwimUrl = '{{fullSwimUrl}}';
	function drive() {
		swim.command(fullSwimUrl, `/botState`, 'setCurrentIntent', 'driveForward');
	}
	function idle() {
		swim.command(fullSwimUrl, `/botState`, 'setCurrentIntent', 'idle');
	}

</script>